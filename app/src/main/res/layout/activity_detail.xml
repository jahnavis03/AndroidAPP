<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detailTag"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="12dp"
            android:text="TAG NO"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/detailImage1"
            android:layout_width="130dp"
            android:layout_height="160dp"
            android:layout_gravity="left"
            android:padding="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/upload" />

        <ImageView
            android:id="@+id/detailImage2"
            android:layout_width="130dp"
            android:layout_height="160dp"
            android:layout_gravity="right"
            android:padding="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/upload" />
        <ImageView
            android:id="@+id/detailImage3"
            android:layout_width="130dp"
            android:layout_height="160dp"
            android:layout_gravity="right"
            android:padding="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/upload" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/detailImage4"
            android:layout_width="130dp"
            android:layout_height="160dp"
            android:layout_gravity="left"
            android:padding="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/upload" />

        <ImageView
            android:id="@+id/detailImage5"
            android:layout_width="130dp"
            android:layout_height="160dp"
            android:layout_gravity="right"
            android:padding="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/upload" />
        <ImageView
            android:id="@+id/detailImage6"
            android:layout_width="130dp"
            android:layout_height="160dp"
            android:layout_gravity="right"
            android:padding="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/upload" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textPet"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="PET NAME"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/detailPet"
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="PET NAME"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textAge"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="AGE"
            android:textColor="@color/black"
            android:textSize="22sp" />
    <TextView
        android:id="@+id/detailAge"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="AGE"
        android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textBreed"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="BREED"
            android:textColor="@color/black"
            android:textSize="22sp" />
    <TextView
        android:id="@+id/detailBreed"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="BREED"
        android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textMedi"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="MEDICAL HIST"
            android:textColor="@color/black"
            android:textSize="22sp" />
    <TextView
        android:id="@+id/detailMed"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="MEDICAL HISTORY"
        android:textSize="18sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.clans.fab.FloatingActionMenu
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:menu_fab_size="normal"
            app:menu_icon="@drawable/baseline_menu_24"
            app:menu_openDirection="down"
            app:menu_showShadow="true">

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_delete_24"
                app:fab_showShadow="true"
                app:fab_size="mini" />

        </com.github.clans.fab.FloatingActionMenu>

    </RelativeLayout>

</LinearLayout>